colorscheme default
set number
" set relativenumber
set mouse=a
syntax on
set ruler
set cursorline
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set showmatch
set incsearch
set hlsearch
set undofile
set updatetime=300
set laststatus=2
set statusline=%f%m%r%h%w\ [%{&ff}]\ [POS=%l,%v][%p%%]\ [LEN=%L]
set noswapfile
set backspace=indent,eol,start
set t_Co=256
set wrap
set encoding=utf-8
set timeoutlen=500

